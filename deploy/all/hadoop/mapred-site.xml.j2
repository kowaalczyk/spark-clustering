<configuration>
    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
    </property>
    <property>
        <name>mapreduce.map.memory.mb</name>
        <value>{{ node_config.mapreduce_map_memory }}</value>
    </property>
    <property>
        <name>mapreduce.map.java.opts</name>
        <value>-Xmx{{ node_config.mapreduce_map_java_heapsize }}m</value>
    </property>
    <property>
        <name>mapreduce.reduce.memory.mb</name>
        <value>{{ node_config.mapreduce_reduce_memory }}</value>
    </property>
    <property>
        <name>mapreduce.reduce.java.opts</name>
        <value>-Xmx{{ node_config.mapreduce_reduce_java_heap_size }}m</value>
    </property>
</configuration>
